<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.MainActivityOnboarding">


    <WebView
        android:visibility="visible"
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    </WebView>

    <TextView
        android:id="@+id/checkInternetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/checkInternetButton"
        android:layout_margin="16dp"
        android:textColor="@color/colorHeadText"
        android:textStyle="bold"
        android:textSize="24sp"
        android:visibility="invisible"
        android:text="@string/please_connect_to_internet"/>

    <Button
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/checkInternetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry"/>
</RelativeLayout>